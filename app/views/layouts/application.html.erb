<!DOCTYPE html>
<html>
  <head>
    <title>Eztracker</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
	 <script src="https://use.fortawesome.com/2f4fc6c9.js"></script>
  </head>

  <body>
	<% if ! @disable_nav %>
	  <nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to(root_path) do %>
		<%= image_tag "eztrackr.png" %>
      <% end %>
    </div>
    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse text-center" id="bs-example-navbar-collapse-1">
	   <div class="pull-right main-buttons">
		   <% if ! user_signed_in? %>
	   		<%= link_to "Request a demo", "", class:"sign-up-btn" %>
				<%= link_to "Log In", new_user_session_path, class:"log-in-btn" %>
			<% else %>
				<span class="welcome-user-message">Welcome Back <span class="user-email"><%= current_user.email %></span></span> -
				<%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "log-out-btn" %>
			<% end %>
		</div>	  
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>
<% end %>

	<% if notice.present? %>
	  	 <p id="alert-message" class="alert alert-info"><%= notice %></p>
	<% end %>
	<% if alert.present? %>
		<p id="alert-message" class="alert alert-danger"><%= alert %></p>
	<% end %>
	  
    <%= yield %>
  </body>
  
</html>
