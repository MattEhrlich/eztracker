<!DOCTYPE html>
<html>
  <head>
    <title>Eztracker</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://use.fontawesome.com/eb1021f440.js"></script>
  </head>

  <body>
	  <nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to(root_path) do %>
      <%= image_tag "eztracker.png", class: "eztracker-icon col-sm-2" %>
      <% end %>
    </div>
    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse text-center" id="bs-example-navbar-collapse-1">		  
	   <% if ! user_signed_in? %>
      <%= link_to 'Product', product_path, class: "link-spacing link-spacing-1" %>
      <%= link_to 'About', about_path, class: "link-spacing" %>
      <%= link_to 'Sales', sales_path, class: "link-spacing" %>
      <%= link_to 'Sign Up', new_user_registration_path, class: "link-spacing" %>
      <%= link_to 'Sign In', new_user_session_path, class: "link-spacing" %>
      
	   <% elsif user_signed_in? %>
      <%= link_to 'Product', product_path, class: "link-spacing link-spacing-1" %>
      <%= link_to 'About', about_path, class: "link-spacing" %>
      <%= link_to 'Sales', sales_path, class: "link-spacing" %>
      <%= link_to 'Workout App', app_path, class: "link-spacing" %>
      <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: "link-spacing" %>
		   <ul class="nav navbar-nav navbar-right">
		   </ul>
	   <% end %>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

	<% if notice.present? %>
	  	 <p id="alert-message" class="alert alert-info"><%= notice %></p>
	<% end %>
	<% if alert.present? %>
		<p id="alert-message" class="alert alert-danger"><%= alert %></p>
	<% end %>
	  
    <%= yield %>
  </body>
  
</html>
